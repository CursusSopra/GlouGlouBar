<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="search" extends="struts-default">
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
	
		<action name="formSearchBar" class="fr.cursusSopra.action.FormSearchBarAction" method="execute">
			<result name="success" type="tiles">formSearchBar</result>
			
		</action>
		<action name="searchByCP" class="fr.cursusSopra.action.ResultBarAction" method="execute">
			<result name="success" type="tiles">resultSearchBar</result>
		</action>
		
		<action name="formSearchHoraire" class="fr.cursusSopra.action.FormSearchHoraireAction" method="execute">
			<result name="success" type="tiles">formSearchHoraire</result>
			
		</action>
	</package>
</struts>
		