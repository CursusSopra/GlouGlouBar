<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="bar" extends="struts-default">
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		<action name="detailsBar" class="fr.cursusSopra.action.DetailsBarAction"
			method="execute">
			<result name="success" type="tiles">detailsBar</result>
		</action>
		
		<action name="directions" class="fr.cursusSopra.action.DirectionsAction"
			method="execute">
			<result name="success" type="tiles">directions</result>
		</action>

	</package>
</struts>
		