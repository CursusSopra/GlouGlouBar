<tiles-definitions>

	<definition name="formSearchBar" extends="baseLayout">
		<put-attribute name="title" value="Formulaire de recherche" />
		<put-attribute name="body" value="/views/search/FormSearchBar.jsp" />
		<put-list-attribute name="moreScripts">
			<add-attribute value="_js/FormSearchBar.js"></add-attribute>
		</put-list-attribute>
		<put-list-attribute name="moreStyles">
			<!--  <add-attribute value="_css/glouglouStyle.css"></add-attribute>-->
			<add-attribute value="_css/searchBarStyle.css"></add-attribute>
		</put-list-attribute>
	</definition>
	
	<definition name="resultSearchBar" extends="baseLayout">
		<put-attribute name="title" value="Resultat recherche d'un bar" />
		<put-attribute name="body" value="/views/search/ResultSearchBar.jsp" />
		<put-list-attribute name="moreScripts">
			<add-attribute value="js/bootstrap.min.js"></add-attribute>
			<add-attribute value="js/star-rating.min.js"></add-attribute>
		</put-list-attribute>
		<put-list-attribute name="moreStyles">
			<add-attribute value="_css/glouglouStyle.css"></add-attribute>
			<add-attribute value="_css/searchBarStyle.css"></add-attribute>
		</put-list-attribute>
	</definition>
	
	<definition name="formSearchHoraire" extends="baseLayout">
		<put-attribute name="title" value="Recherche par horaire" />
		<put-attribute name="body" value="/views/search/FormSearchHoraire.jsp" />
		<put-list-attribute name="moreScripts">
			<add-attribute value="_js/formSearchHoraire.js"></add-attribute>
		</put-list-attribute>
	</definition>
